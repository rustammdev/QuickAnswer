<div
  id="CreateEventModal"
  class="fixed items-center justify-center inset-0 bg-gray-600 bg-opacity-70 h-full w-full hidden"
>
  <div class="p-5 w-96 lg:w-[420px] shadow-lg rounded-md bg-white">
    <form id="eventForm">
      <!-- Birinchi Qator (Matn maydoni) -->
      <div class="mt-3">
        <label
          for="title"
          class="block text-sm font-medium text-gray-700"
        >Event name</label>
        <input
          type="text"
          id="title"
          required
          name="title"
          class="mt-1 p-2 block w-full border rounded-md"
          placeholder="Введите название"
        />
      </div>

      <!-- Ikkinchi Qator (Matn maydoni) -->
      <div class="mt-3">
        <label
          for="description"
          class="block text-sm font-medium text-gray-700"
        >Description <i>* Optional</i></label>
        <textarea
          id="description"
          name="desc"
          class="mt-1 p-2 block w-full border rounded-md"
          placeholder="Введите описание"
        ></textarea>
      </div>

      <!-- Uchinchi Qator (2ta Matn maydoni) -->
      <div class="mt-3 flex justify-between">
        <div class="w-1/2 pr-2">
          <label
            for="location"
            class="block text-sm font-medium text-gray-700"
          >Social link <i>*Optional</i></label>
          <input
            type="text"
            id="location"
            name="link"
            class="mt-1 p-2 block w-full border rounded-md"
            placeholder="Введите место"
          />
        </div>
        <div class="w-1/2 pl-2">
          <label
            for="date"
            class="block text-sm font-medium text-gray-700"
          >End date</label>
          <input
            type="date"
            id="date"
            name="endData"
            required
            class="mt-1 p-2 block w-full border rounded-md"
          />
        </div>
      </div>
      <span
        id="ResponseMessageCreateEvent"
        class="text-left inline-block align-middle w-auto h-3 text-base text-green-700 pl-[2px]"
      ></span>

      <!-- Tugmalar -->
      <div class="mt-5 flex justify-end">
        <button
          type="button"
          id="closeEventModal"
          class="mr-2 px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400"
        >Cancel</button>
        <button
          type="submit"
          class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
        >Create</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/dashboard/events.js"></script>