<form id="LoginForm">
  <!-- Login modal -->
  <div
    id="loginModal"
    class="fixed inset-0 bg-gray-600 bg-opacity-50 h-full w-full items-center justify-center hidden"
  >
    <div
      class="relative my-auto mx-auto p-5 border w-96 max-h-[90vh] overflow-y-auto shadow-lg rounded-md bg-white"
    >
      <div class="mt-3 text-center">
        <div class="text-left mb-6">
          <span
            class="text-2xl font-bold text-blue-600"
          >FastQuestion</span>
          <p class="mt-2 text-sm text-gray-600 leading-relaxed">
            Lorem, ipsum dolor sit amet consectetur adipisicing elit.
          </p>
        </div>

        {{! Register buttons }}
        <div class="flex justify-between space-x-4 mt-6 mb-6">
          <button
            class="flex-1 flex items-center justify-center bg-white border border-gray-300 rounded-md px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"
              />
            </svg>
            Google
          </button>
          <button
            class="flex-1 flex items-center justify-center bg-white border border-gray-300 rounded-md px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
            GitHub
          </button>
        </div>

        <!-- Subtitle -->
        <div class="flex items-center justify-between my-6">
          <span class="flex-grow border-t border-gray-300"></span>
          <span class="mx-4 text-sm text-gray-500">Quick sign Up</span>
          <span class="flex-grow border-t border-gray-300"></span>
        </div>

        <!-- data inputs-->
        <input
          type="email"
          id="LoginEmail"
          required
          placeholder="Your email address"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
        />
        <input
          type="password"
          id="LoginPassword"
          required
          placeholder="Pick a password"
          class="mt-4 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
        />

        <!-- forgot password o'ng tomonda joylashsin -->
        <span
          class="block text-right mt-2 text-sm text-blue-600 hover:underline"
        >Forgot Password ?</span>

        <!-- login button to'liq qatorni egallasin, dizayn minimal -->
        <button
          class="w-full mt-4 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Log In
        </button>

        <!-- o'rtada turin -->
        <p class="mt-6 text-center text-sm text-gray-600">
          Don't have an account?
          <a
            href="#"
            class="font-medium text-blue-600 hover:underline"
          >Create an account</a>
        </p>
      </div>
    </div>
  </div>
</form>